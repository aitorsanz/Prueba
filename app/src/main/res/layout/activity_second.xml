<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E9E4E1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E9E4E1">
        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="135px"
            android:src="@drawable/settings"
            android:background="#E9E4E1"/>

        <ImageView
            android:id="@+id/courses_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="135px"
            android:src="@drawable/cursos"
            android:background="#E9E4E1"/>
        <ImageView
            android:id="@+id/message_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/mensajes"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E9E4E1">
        <ImageView
            android:id="@+id/grades_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="135px"
            android:layout_marginRight="135px"
            android:src="@drawable/expediente"
            android:background="#E9E4E1"/>
        <ImageView
            android:id="@+id/calendar_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/calendar"
            android:background="#E9E4E1"/>
    </LinearLayout>
</LinearLayout>
